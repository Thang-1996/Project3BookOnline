@model IEnumerable<BookOnlineShop.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Danh Sách Sách
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a href="#" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Trở Về
                    </a>
                    &nbsp;
                    <div class="dropdown dropdown-inline">
                        <a asp-action="Create" asp-area="admin" asp-controller="Products" class="btn btn-brand btn-icon-sm" aria-haspopup="true" aria-expanded="false">
                            <i class="flaticon2-plus"></i> Thêm Sách Mới 
                        </a>

                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__body">

            <!--begin: Search Form -->
            <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row align-items-center">
                     @*       <form asp-action="Index" method="GET">
                                <div class="col-md-8 kt-margin-b-20-tablet-and-mobile">
                                    <div class="kt-input-icon kt-input-icon--left">
                                        <input style="width: 400px" type="text" class="form-control" name="search" placeholder="Search..." id="generalSearch">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-primary" style="margin-top: 15px">Search</button>
                                </div>
                            </form>*@

                        </div>
                    </div>

                </div>
            </div>

            <!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">
            <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
                <!--begin: Datatable -->
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>
                                Tên Sách
                            </th>
                            <th>
                               Hình Ảnh
                            </th>

                            <th>
                                Đơn Giá
                            </th>
                            <th>
                                Số Lượng
                            </th>


                            <th>
                               Thể Loại
                            </th>
                            <th>
                                Tác Giả
                            </th>
                            <th>
                                Nhà Xuất Bản

                            </th>
                            <th>
                                Trạng Thái
                            </th>
                            <th>

                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td>
                                @item.ProductName
                            </td>

                            <td>
                                <img src="~/images/@item.ProductImage" style="width: 60px; height: 60px" alt="ProductImage" />
                            </td>


                            <td>
                                @item.Price
                            </td>
                            <td>
                                @item.Quantity
                            </td>


                            <td>
                                @item.Category.CategoryName
                            </td>
                            <th>
                                @string.Join(", ", item.AuthorProducts.Select(p => p.Author.AuthorName))
                            </th>
                            <th>
                                @string.Join(", ", item.PublisherProducts.Select(p => p.Publisher.PublisherName))
                            </th>
                            <td>
                                @if (item.Status == 1)
                                {
                                    <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                                }
                                else
                                {
                                    <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">Block</span>
                                }

                            </td>
                   


                            <td>
                                <span style="overflow: visible; position: relative; width: 110px;">
                                    <a asp-action="Details" asp-area="admin" asp-route-id="@item.ProductID" title="View details" class="btn btn-sm btn-clean btn-icon btn-icon-md">
                                        <i class="la la-folder"></i>
                                    </a>
                                    <a asp-action="Edit" asp-area="admin" asp-route-id="@item.ProductID" title="Edit details" class="btn btn-sm btn-clean btn-icon btn-icon-md">
                                        <i class="la la-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-area="admin" asp-route-id="@item.ProductID" title="Delete" class="btn btn-sm btn-clean btn-icon btn-icon-md">
                                        <i class="la la-trash"></i>

                                    </a>
                                </span>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
</div>


