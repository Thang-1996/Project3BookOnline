                    <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                        <div class="kt-input-icon kt-input-icon--left">
                            <input style="width: 400px" type="text" class="form-control" name="search" placeholder="Search..." id="generalSearch">
                            <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                <span><i class="la la-search"></i></span>
                            </span>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary" style="margin-top: 15px">Search</button>
                    </div>
                </form>*@

            <!--</div>
                    </div>

                </div>
            </div>-->
            <!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">
            <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
                <!--begin: Datatable -->
                <table class="table">
                    <thead>
                        <tr>
                            <td>Tên khách hàng:</td>
                            <th>
                                Địa chỉ giao hàng
                            </th>
                            <th>
                                Số điện thoại
                            </th>

                            <th>
                                Ngày đặt hàng
                            </th>

                            <th>
                                Kiểu thanh toán
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th>
                                Tổng tiền
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telephone)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateAt)
                                </td>

                                <td>
                                    @if (item.paymenttype == 1)
                                    {
                                        <span>Thanh toán sau khi nhận hàng</span>
                                    }

                                </td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="kt-badge  kt-badge--warning kt-badge--inline kt-badge--pill">Đang giao hàng</span>
                                    }
                                    @if (item.Status == 2)
                                    {
                                        <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">Đã hoàn thành</span>
                                    }
                                    @if (item.Status == 3)
                                    {
                                        <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">Đã hủy</span>
                                    }
                                </td>
                                <td>
                                    @Math.Round(item.GrandTotal) đ
                                </td>

                                <td>
                                    @if (item.Status == 2 || item.Status == 3)
                                    {
                                        <a class="btn btn-sm btn-clean btn-icon btn-icon-md" onclick="return alert('Không thể cập nhật đơn hàng đã hoàn thành hoặc hủy');"><i class="la la-edit"></i></a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-clean btn-icon btn-icon-md" asp-action="Edit" asp-route-id="@item.ID"><i class="la la-edit"></i></a>
                                    }

                                    <a class="btn btn-sm btn-clean btn-icon btn-icon-md" asp-action="Details" asp-route-id="@item.ID"><i class="la la-info"></i></a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>



