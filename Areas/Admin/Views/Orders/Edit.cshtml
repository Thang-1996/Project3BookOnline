@model BookOnlineShop.Models.Orders

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Edit Category
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Cập nhật trạng thái đơn hàng 
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Categories" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <input type="hidden" asp-for="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Telephone" class="form-control" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="OrderNote" class="form-control" />
                    <span asp-validation-for="OrderNote" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="CreateAt" class="form-control" />
                    <span asp-validation-for="CreateAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng thái</label>
               
                    <select asp-for="Status" class="form-control">
                        <option value="2">Hoàn thành đơn hàng</option>
                        <option value="3">Hủy đơn hàng</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UpdateAt" class="control-label">Ngày cập nhật</label>
                    <input asp-for="UpdateAt" class="form-control" />
                    <span asp-validation-for="UpdateAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="paymenttype" class="form-control" />
                    <span asp-validation-for="paymenttype" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="GrandTotal" class="form-control" />
                    <span asp-validation-for="GrandTotal" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input type="hidden" asp-for="UserID" class="form-control" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
