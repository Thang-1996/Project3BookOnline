@model BookOnlineShop.Models.Authors

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var authors = Model as Authors;
    
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Author Information
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.DisplayFor(model => model.AuthorName)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="authors" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        Author Name :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AuthorName)
                    </dd>
                    <dt class="col-sm-2">
                        Email :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Address :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        Phone : 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                    <dt class="col-sm-2">
                        Status : 
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Status == 1)
                        {
                            <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                        }
                        else
                        {
                            <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">Block</span>
                        }
                    </dd>

                    <dt class="col-sm-2">
                        Book :
                    </dt>
                    <dd>
                        @foreach (var item in authors.AuthorProducts)
                        {

                            <span>
                                @item.Product.ProductName ,
                            </span>

                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="AuthorID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
