@model BookOnlineShop.Areas.Admin.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
<div class="alert alert-light alert-elevate" role="alert">
    <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
    <div class="alert-text">
        Create Order
    </div>
</div>
<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
        <div class="kt-portlet__head-label">
            <span class="kt-portlet__head-icon">
                <i class="kt-font-brand flaticon2-line-chart"></i>
            </span>
            <h3 class="kt-portlet__head-title">
                Create Order
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper">
                <a asp-action="Index" asp-area="admin" asp-controller="Orders" class="btn btn-clean btn-icon-sm">
                    <i class="la la-long-arrow-left"></i>
                    Back
                </a>
                &nbsp;

            </div>
        </div>
    </div>

    <div class="kt-portlet__body">
        <form asp-action="Create" asp-area="admin" asp-controller="Orders" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderName" class="control-label">Order Name</label>
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateAt" class="control-label">Create At</label>
                <input asp-for="CreateAt" class="form-control" />
                <span asp-validation-for="CreateAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UpdateAt " class="control-label">Update At</label>
                <input asp-for="UpdateAt " class="form-control" />
                <span asp-validation-for="UpdateAt " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GrandTotal " class="control-label">GrandTotal</label>
                <input asp-for="GrandTotal " class="form-control" />
                <span asp-validation-for="GrandTotal " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status " class="control-label">Status</label>
                <input asp-for="Status " class="form-control" />
                <span asp-validation-for="Status " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserID " class="control-label">UserID</label>
                <input asp-for="UserID " class="form-control" />
                <span asp-validation-for="UserID " class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Products" class="control-label">Products</label>
                @* @Html.ListBox("SelectedCategor", (MultiSelectList)ViewBag.Roles, new { size = 8 }) *@
                <select asp-for="SelectedProduct" asp-items="ViewBag.Products" class="custom-select mt-5 pt-3 ">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
       
</div>
