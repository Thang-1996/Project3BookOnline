@model BookOnlineShop.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var product = Model as Products;

}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            View Product
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    View Product
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Products" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">

            <div>
                <h4>Product</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Product Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductName)
                    </dd>
                    <dt class="col-sm-2">
                        Product Code
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductCode)
                    </dd>
                    <dt class="col-sm-2">
                        Product Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProductDescription)
                    </dd>
                    <dt class="col-sm-2">
                        Product Image
                    </dt>
                    <dd class="col-sm-10">
                        <img src="~/images/@Model.ProductImage" style="width: 60px; height: 60px" alt="ProductImage" />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt class="col-sm-2">
                        Publishing Time
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PublishingTime)
                    </dd>
                    <dt class="col-sm-2">
                        Reprint Time
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Reprinttimes)
                    </dd>
                    <dt class="col-sm-2">
                        Category
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        Authors
                    </dt>
                    @foreach (var item in product.AuthorProducts)
                    {

                        <span>
                            @item.Author.AuthorName ,
                        </span>

                    }

                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

