@model BookOnlineShop.Models.Publishers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var publisher = Model as Publishers;

}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Thông Tin Nhà Xuất Bản
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.DisplayFor(model => model.PublisherName)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="publishers" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>

        </div>
        <div class="kt-portlet__body">

            <dl class="row">
                <dt class="col-sm-2">
                    Tên Nhà Xuất Bản
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PublisherName)
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    Địa Chỉ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    Số Điện Thoại
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dd class="col-sm-10">
                    @if (Model.Status == 1)
                    {
                        <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                    }
                    else
                    {
                        <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">Block</span>
                    }
                </dd>

                <dt class="col-sm-2">
                    Sách :
                </dt>
                <dd>
                    @foreach (var item in publisher.PublisherProducts)
                    {

                        <span>
                            @item.Product.ProductName ,
                        </span>

                    }
                </dd>
            </dl>
        </div>

    </div>
</div>

<div>
    <a asp-area="admin" asp-action="Edit" asp-route-id="@Model.PublisherID">Edit</a> |
    <a asp-area="admin" asp-action="Index">Back to List</a>
</div>
