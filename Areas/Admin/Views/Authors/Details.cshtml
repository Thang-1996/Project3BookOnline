@model BookOnlineShop.Models.Authors

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var authors = Model as Authors;

}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            View Author
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    View Author
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="authors" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">

            <div>
                <h4>@Html.DisplayFor(model => model.AuthorName)</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Author Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AuthorName)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Address
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-2">
                        Phone Number
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                   

                    <dt class="col-sm-2">
                        Products
                    </dt>
                    @foreach (var item in authors.AuthorProducts)
                    {

                        <span>
                            @item.Product.ProductName ,
                        </span>

                    }

                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.AuthorID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
