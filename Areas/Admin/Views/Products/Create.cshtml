@model BookOnlineShop.Areas.Admin.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Create Product
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Create Product
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Products" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label">Product Code</label>
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductDescription " class="control-label">Product Description</label>
                    <input asp-for="ProductDescription " class="form-control" />
                    <span asp-validation-for="ProductDescription " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="ProductContent" id="content" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity " class="control-label"></label>
                    <input asp-for="Quantity " class="form-control" />
                    <span asp-validation-for="Quantity " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price " class="control-label"></label>
                    <input asp-for="Price " class="form-control" />
                    <span asp-validation-for="Price " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublishingTime " class="control-label"></label>
                    <input asp-for="PublishingTime " class="form-control" />
                    <span asp-validation-for="PublishingTime " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reprinttimes " class="control-label"></label>
                    <input asp-for="Reprinttimes " class="form-control" />
                    <span asp-validation-for="Reprinttimes " class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Product Image</label>
                    <input type="file" asp-for="ProductImage" class="form-control-file" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>

                    <label class=" myfile-input">Choose Product</label>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label">Category</label>
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Authors" class="control-label">Author</label>
                    @* @Html.ListBox("SelectedCategor", (MultiSelectList)ViewBag.Roles, new { size = 8 }) *@
                    <select asp-for="SelectedAuthor" asp-items="ViewBag.Authors" class="custom-select mt-5 pt-3 ">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

