@model BookOnlineShop.Models.Categories

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Author Information
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.DisplayFor(model => model.CategoryName) - @Html.DisplayFor(model => model.CategoryCode)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Categories" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">

            <div>
                <h4> @Html.DisplayFor(model => model.CategoryName) - @Html.DisplayFor(model => model.CategoryCode) </h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Category Name :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        Category Code :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryCode)
                    </dd>
                    <dt class="col-sm-2">
                        Status :
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Status == 1)
                        {
                            <span class="kt-badge  kt-badge--success kt-badge--inline kt-badge--pill">Active</span>
                        }
                        else
                        {
                            <span class="kt-badge  kt-badge--danger kt-badge--inline kt-badge--pill">Block</span>
                        }
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CategoryID">Update information</a> |
                <a asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>
