@model BookOnlineShop.Areas.Admin.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            Cập Nhật Sách
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @Html.DisplayFor(model => model.ProductName) - @Html.DisplayFor(model => model.ProductCode)
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Products" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Trở Về
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <form asp-action="Edit" asp-area="admin" asp-controller="Products" asp- enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductID" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Tên Sách</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label">Mã Sách</label>
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductDescription " class="control-label">Mô Tả Sách </label>
                    <textarea asp-for="ProductDescription" id="content2" class="form-control"></textarea>
                    <span asp-validation-for="ProductDescription " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductContent " class="control-label">Nội Dung Sách </label>
                    <textarea asp-for="ProductContent" id="content" class="form-control"></textarea>
                    <span asp-validation-for="ProductContent " class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity " class="control-label"> Số Lượng</label>
                    <input asp-for="Quantity " class="form-control" />
                    <span asp-validation-for="Quantity " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price " class="control-label"> Đơn Giá</label>
                    <input asp-for="Price " class="form-control" />
                    <span asp-validation-for="Price " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng Thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="1">Active</option>
                        <option value="0">Blog</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublishingTime " class="control-label">Thời Gian Xuất Bản </label>
                    <input asp-for="PublishingTime " class="form-control" />
                    <span asp-validation-for="PublishingTime " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reprinttimes " class="control-label"> Số Lần Tái Bản </label>
                    <input asp-for="Reprinttimes " class="form-control" />
                    <span asp-validation-for="Reprinttimes " class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Image</label>
                    <input type="file" asp-for="ProductImage" class="form-control-file" />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label">Thể Loại</label>
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Authors" class="control-label">Tác Giả</label>
                    @* @Html.ListBox("SelectedCategor", (MultiSelectList)ViewBag.Roles, new { size = 8 }) *@
                    <select asp-for="SelectedAuthor" asp-items="ViewBag.Authors" class="custom-select mt-5 pt-3 ">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Publishers" class="control-label">Nhà Xuất Bản</label>
                    @* @Html.ListBox("SelectedCategor", (MultiSelectList)ViewBag.Roles, new { size = 8 }) *@
                    <select asp-for="SelectedPublisher" asp-items="ViewBag.Publishers" class="custom-select mt-5 pt-3 ">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.custom-select').select2();
        });
    </script>
}