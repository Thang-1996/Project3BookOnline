@model BookOnlineShop.Models.Orders

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var order = Model as Orders;

}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="alert alert-light alert-elevate" role="alert">
        <div class="alert-icon"><i class="la la-folder kt-font-brand"></i></div>
        <div class="alert-text">
            View Product
        </div>
    </div>
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-line-chart"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    View Product
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <a asp-action="Index" asp-area="admin" asp-controller="Orders" class="btn btn-clean btn-icon-sm">
                        <i class="la la-long-arrow-left"></i>
                        Back
                    </a>
                    &nbsp;

                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <div>
                <h4>@Html.DisplayFor(model => model.OrderName)</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Order Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OrderName)
                    </dd>
                    <dt class="col-sm-2">
                        Create At
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreateAt)
                    </dd>
                    <dt class="col-sm-2">
                        Update At
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAt)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Status)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GrandTotal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GrandTotal)
                    </dd>
                    @foreach (var item in order.OrderProducts)
                    {

                        <span>
                            @item.Products.ProductName,
                        </span>

                    }
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

